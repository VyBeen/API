{
    "email": {
        "max": 64
    },
    "password": {
        "min": 8,
        "upper": 1,
        "lower": 1,
        "number": 1,
        "special": 1,
        "salt": 10
    },
    "role": {
        "user": 1,
        "admin": 2
    },
    "token": {
        "access": {
            "expiration": "4h"
        },
        "passwordReset": {
            "expiration": "1h"
        },
        "verify": {
            "expiration": "4h"
        },
        "type": {
            "user": "user",
            "app": "app"
        }
    },
    "url": {
        "passwordReset": "/reset?token=",
        "emailVerif": "/validate?token="
    },
    "mailer": {
        "passwordReset": {
            "cooldown": 600000
        },
        "emailVerification": {
            "cooldown": 600000
        }
    },
    "query": {
        "defaultLimit": 10,
        "minLimit": 1,
        "maxLimit": 50
    },
    "apps": {
        "maxPerUser": 5
    },
    "portal": {
        "tokenExpiration": 900000
    }
}